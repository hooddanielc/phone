    button{ action 'numpadButtonPress' '3' } 3
    button{ action 'numpadButtonPress' '4' } 4
    button{ action 'numpadButtonPress' '5' } 5
    button{ action 'numpadButtonPress' '6' } 6
    button{ action 'numpadButtonPress' '7' } 7
    button{ action 'numpadButtonPress' '8' } 8
    button{ action 'numpadButtonPress' '9' } 9
